{% extends 'base.html.twig' %}

{% block title %}Paniers index{% endblock %}

{% block body %}
    <h1><a href="{{path('index')}}"><img src="{{asset('img/back.png')}}" alt="back" width="20"></a> Mon Panier </h1>
    <h3>Utilisateur:
    {% if paniers %}
    {{paniers[0].idClient}}
    {% endif %}
    
    </h3>
    <table class="table">
        <thead>
            <tr>
                
                <th>Nom produit</th>
                <th>Marque</th>
                <th>Date Livraison</th>
                <th>Quantité</th>
                <th>Prix de vente</th>
                <th>Couleur</th>
                <th>Taille</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for panier in paniers %}
            <tr>
                
                <td>{{ panier.variant.produit.nom }}</td>
                <td>{{ panier.variant.produit.marque }}</td>
                <td>{{ panier.dateLivraison ? panier.dateLivraison|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ panier.quantity }}</td>
                <td>{{ panier.variant.prix}} €</td>
                 <td>{{ panier.couleur.libele}}</td>
                 <td>{{ panier.taille.libele}}</td>
                <td>
                    <!--<a href="{{ path('paniers_show', {'id': panier.id}) }}">show</a>-->
                    <!--<a href="{{ path('paniers_edit', {'id': panier.id}) }}">edit</a>-->
                    {{ include('paniers/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
     
    <!--<a href="{{ path('paniers_new') }}">Create new</a>-->
{% endblock %}
